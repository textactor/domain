{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "./src",
        "target": "es2017",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "types",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": false,
        "strict": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "include": [
        "src/**/*.ts"
    ]
}