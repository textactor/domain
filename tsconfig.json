{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dest",
    "rootDir": "./src",
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dest",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2017", "esnext.asynciterable"],
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*.ts"]
}
